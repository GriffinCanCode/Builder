{
    "name": "builder",
    "description": "High-performance build system for mixed-language monorepos",
    "authors": ["Griffin"],
    "copyright": "Copyright Â© 2025",
    "license": "MIT",
    "targetType": "executable",
    "targetPath": "bin",
    "targetName": "builder",
    
    "sourcePaths": ["source"],
    "importPaths": ["source"],
    "excludedSourceFiles": ["source/frontend/lsp/main.d"],
    
    "mainSourceFile": "source/app.d",
    
    "dependencies": {},
    
    "configurations": [
        {
            "name": "default",
            "targetType": "executable",
            "targetName": "builder",
            "mainSourceFile": "source/app.d",
            "excludedSourceFiles": ["source/frontend/lsp/main.d"],
            "sourceFiles": [
                "bin/obj/blake3.o",
                "bin/obj/blake3_dispatch.o",
                "bin/obj/simd_ops.o",
                "bin/obj/cpu_detect.o"
            ]
        },
        {
            "name": "lsp",
            "targetType": "executable",
            "targetName": "builder-lsp",
            "mainSourceFile": "source/frontend/lsp/main.d",
            "excludedSourceFiles": [
                "source/app.d"
            ],
            "sourceFiles": [
                "bin/obj/blake3.o",
                "bin/obj/blake3_dispatch.o",
                "bin/obj/simd_ops.o",
                "bin/obj/cpu_detect.o"
            ]
        }
    ],
    
    "buildTypes": {
        "release": {
            "buildOptions": ["releaseMode", "inline", "optimize"]
        },
        "debug": {
            "buildOptions": ["debugMode", "debugInfo"]
        }
    }
}
