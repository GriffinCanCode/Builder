// Example: Repository Rules (demonstration)
//
// Note: Full repository rule support requires external dependencies.
// This simplified version demonstrates local dependencies.
// For full external dependency support, see README.md

target("local-utils") {
    type: library;
    language: cpp;
    sources: ["utils.cpp"];
}

target("app-with-utils") {
    type: executable;
    language: cpp;
    sources: ["main-fmt.cpp"];
    
    // Use local dependency
    deps: [":local-utils"];
}

