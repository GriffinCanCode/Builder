// Node.js script - no bundling needed
target("utils") {
    type: library;
    language: javascript;
    sources: ["utils.js"];
    
    javascript: {
        "bundler": "none"
    };
}

target("app") {
    type: executable;
    language: javascript;
    sources: ["app.js"];
    deps: [":utils"];
    
    javascript: {
        "mode": "node",
        "bundler": "none"
    };
}

